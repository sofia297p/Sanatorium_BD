@model IEnumerable<Sanatorium.DrinkType>

@{
    ViewData["Title"] = "Index";
}

<h1>Drinks</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlcoholDegree)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlcoholDegree)
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Drink" asp-action="Update" asp-route-myParam="@item.Id">Update</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Drink" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td>
                <a class="btn btn-success" asp-controller="Drink" asp-action="Add">Add</a>
            </td>
        </tr>
    </tbody>
</table>
