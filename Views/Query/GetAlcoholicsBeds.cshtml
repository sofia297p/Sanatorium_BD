@model List<Sanatorium.Bed>

@{
    ViewData["Title"] = "GetAlcoholicsBeds";
}

<h1>GetAlcoholicsBeds</h1>

<h1>Get all beds for alcoholic, where he layed at least once</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Bed" asp-action="Update" asp-route-id="@item.Id">Update</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Bed" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td>
                <a class="btn btn-success" asp-controller="Bed" asp-action="Add">Add</a>
            </td>
        </tr>
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Queries</a>
</div>
