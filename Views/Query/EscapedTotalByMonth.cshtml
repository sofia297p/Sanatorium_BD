@model List<(string, int)>

@{
    ViewData["Title"] = "EscapedTotalByMonth";
}

<h1>Amount of escaped alcoholics  by each Month</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Month</th>
            <th scope="col">Amount of alcoholics escaped</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Item1
                </td>
                <td>
                     @item.Item2
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Queries</a>
</div>

